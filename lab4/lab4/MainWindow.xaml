<Window x:Class="lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="533" Width="806">
    <StackPanel Margin="20" Background="#FFF2F2F2" HorizontalAlignment="Center">

        <!-- Sekcja przycisków -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="BtnOblicz" Content="Oblicz" Width="100" Margin="10" Click="Button_Click" Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnkula" Content="Kula" Width="100" Margin="10" Click="btnkula_Click" Background="#FFE64848" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnstozek" Content="Stożek" Width="100" Margin="10" Click="btnstozek_Click" Background="#FFE83A3A" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnZadC" Content="Zadanie C i D" Width="130" Margin="10" Click="btnZadC_Click" Background="#FF3F51B5" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <!-- Label z wynikiem -->
        <Label x:Name="labelzad1"
           Content="Tutaj pojawi się wynik"
           HorizontalAlignment="Center"
           Margin="0,10"
           Padding="10"
           FontSize="14"
           FontWeight="SemiBold"
           Background="#FFD27272"
           Foreground="White"
           Width="300"
           HorizontalContentAlignment="Center"/>

        <!-- Lista wyników -->
        <ListBox x:Name="listBox1"
             Height="200"
             Width="400"
             Margin="10"
             Background="WhiteSmoke"
             BorderBrush="Gray"
             BorderThickness="1"
             FontSize="14"/>

        <Button x:Name="btnTestKula" Content="Test Kula + - ++" Click="btnTestKula_Click" Margin="10"/>
        <Button x:Name="btnPotwierdz" Content="Potwierdź" Click="btnPotwierdz_Click" Margin="10"/>
        <Button Content="Pokaż liczby" Click="Button_Click2" Width="120" Height="40" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Content="Pokaż istoty" Click="Button_Click3" Width="120" Height="40"  Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Dodaj towary" Click="Button_Click" Width="120" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </StackPanel>

</Window>
