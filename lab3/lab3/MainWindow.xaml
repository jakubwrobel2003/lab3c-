<Window x:Class="lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button x:Name="btnZadanieA" Content="Zadanie A – Wyświetl pojazdy" Width="250" Margin="0,0,0,10" Click="btnZadanieA_Click"/>
            <ListBox x:Name="listBoxPojazdy" Height="150" Margin="0,0,0,10"/>
            <Button x:Name="btnHistoria" Content="Pokaż historię nazw wybranego pojazdu" Width="300" Margin="0,0,0,10" Click="btnHistoria_Click"/>
            <ListBox x:Name="listBoxHistoria" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
